<% layout('layouts/boilerplate.ejs') %>
<body>
  <form action="/profile/edit/<%= user._id %>" method="post" enctype="multipart/form-data" id="edit-profile-form">
    <h3 id="title">Edit profile</h3>
    <input
      type="text"
      placeholder="Enter name"
      value="<%= user.name  %>"
      required
      name="name"
    />

    <input
      type="text"
      placeholder="Enter phone number"
      value="<%= user.phone  %>"
      required
      name="phone"
    />


    <div class="img-div">
      <% if (user.profile !== "") { %>
      <img src="<%= user.profile  %>" alt="" />

      <% } %>
      <% if (user.profile ==="") { %>
      <img src="https://th.bing.com/th/id/R.6b0022312d41080436c52da571d5c697?rik=ejx13G9ZroRrcg&riu=http%3a%2f%2fpluspng.com%2fimg-png%2fuser-png-icon-young-user-icon-2400.png&ehk=NNF6zZUBr0n5i%2fx0Bh3AMRDRDrzslPXB0ANabkkPyv0%3d&risl=&pid=ImgRaw&r=0" alt="" />

      <% } %>

      <input type="file" name="profile" accept="image/*" required />
    </div>

    <div class="btn-div">
      <button id="update-btn">Update</button>
    </div>
    </div>
  </form>

  <script>
    const editForm = document.getElementById("edit-profile-form"); 
    document.getElementById("update-btn").addEventListener("click",async (e)=> {
      const id = "<%= user._id %>"
      e.preventDefault();

      try {
        const formData = new FormData(editForm);
  
        const profileData = {
          name: formData.get("name"),
          phone:formData.get("phone"),
          profile:formData.get("profile")
        }
        const response = await axios.post(`/profile/edit/${id}`,profileData, {
          headers: { "Content-Type": "multipart/form-data" },
        })
        if (response.data.success) {
          showSuccessAlert(response.data.message,"")
          setTimeout(()=>{
            window.location.reload();
          },5000);
        }
      } catch (error) {
        showErrorAlert(error.response.data.message);
      }
      
    })
  </script>
</body>
