<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb-5">
            <a class="text-blue-500" href="/">Add Product</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Products</h1>

        <!-- Products Container -->
        <div class="users flex gap-3 flex-wrap">
            <% if (cafeproduct.length > 0) { %>
                <% cafeproduct.forEach(function(product) { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <!-- Fixed Image Container -->
                        <div class="w-full h-40 bg-zinc-700 rounded-lg overflow-hidden flex items-center justify-center">
                            <img class="w-full h-full object-cover" src="<%= product.imgUrl %>" alt="<%= product.ProductName %>">
                        </div>
                        
                        <!-- Product Details -->
                        <h3 class="text-xl mt-3"><%= product.ProductName %></h3>
                        <h5 class="text-green-400 font-medium">â‚¹<%= product.ProductPrice %></h5>
                        <p class="text-zinc-500 text-sm"><%= product.Description %></p>

                        <!-- Action Links -->
                        <div class="flex gap-3 mt-4">
                            <a class="text-blue-400 hover:underline" href="/products/edit/<%= product._id %>">Edit</a>
                            <a class="text-red-500 hover:underline" href="/products/delete/<%= product._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-500 w-full text-center">No Products Available</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
