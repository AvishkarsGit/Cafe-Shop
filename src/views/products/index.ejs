<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/products/read">View Products</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">Create Product</h1>
        <form action="/products/create" method="post" enctype="multipart/form-data">
            <input
                class="px-5 py-2 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
                name="ProductName"
                type="text"
                placeholder="Product Name"
                required
            />
            <input
                class="px-5 py-2 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
                name="ProductPrice"
                type="text"
                placeholder="Product Price"
                required
            />
            <input
                class="px-5 py-2 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
                name="Description"
                type="text"
                placeholder="Description"
            />
            <input
                class="px-5 py-2 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
                name="image"
                type="file"
                accept="image/*"
                required
            />
            <input
                class="px-5 py-2 bg-blue-500 rounded-lg ml-3"
                type="submit"
                value="Create"
            />
        </form>
    </div>
</body>
</html>
