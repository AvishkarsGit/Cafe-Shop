<body>
  <div>
    <form action="/products/create" method="post" id="product-form" enctype="multipart/form-data">
      <h1 id="title">Add New Product</h1>
      <input
        name="ProductName"
        type="text"
        placeholder="Product Name"
        id="ProductName"
      />
      <input
        name="ProductPrice"
        type="number"
        min="1"
        placeholder="Product Price"
        id="ProductPrice"
      />

      <input
        name="Description"
        type="text"
        placeholder="Discription"
        id="Description"
      />
      <input
            class="px-5 py-2 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
            name="imgUrl"
            type="file"
            accept="image/*"
            required
        />

      <div class="options">
        <select id="categorySelect">
          <option value="">Select Category</option>
        </select>
      </div>

      <div class="btn-add">
        <button id="add-btn">Add Product</button>
      </div>


    </form>
  </div>
  <script src="/js/product.js"></script>

</body>

